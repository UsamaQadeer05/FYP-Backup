<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Researcher.ResearcherActivity">

    <Button
        android:id="@+id/btnBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Disease Wise Bar Chart"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnPieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Disease Wise Pie Chart"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnLineChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Disease Wise Line Chart"
        android:textSize="20dp" />

</LinearLayout>